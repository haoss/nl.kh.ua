doctype

html(lang="ru")
  
  -var active = 'Страница 404' //активный пункт меню, список в header.jade
  -var pageTitle = 'Страница 404' + ' - Ломбард «Національний»' //title страницы для генерации верстки  

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    
    include ./_include/_header
    
    .content.no--p-bottom
      
      .breadcrumbs
        .container
          ul
            li
              a(href="#!") 
                i.fa.fa-home
                | Главная
      
      .content__top(style="background-image: url('./img/content-top-background-3.jpg');")
        .container
          
          .content__top-wrapper
            .row
              .col-md-6.col-md-push-6.col-sm-7.col-sm-push-5
                .section__head
                  div
                    h1 Ошибка 404
                p Страница, на которую Вы хотели перейти, не найдена. Возможно, введен некорректный адрес или страница была удалена.
                a(href="#!").btn Перейти на главную
                
    include ./_include/_footer
    //- div(style="height: 1000px; background-color: #000")
    
    //[if gte IE 9]
      <script src='./js/libs/html5shiv/es5-shim.min.js'>
      <script src='./js/libs/html5shiv/html5shiv.min.js'>
      <script src='./js/libs/html5shiv/html5shiv-printshiv.min.js'>
      <script src='./js/libs/html5shiv/respond.min.js'><![endif]

    // Load Scripts
    script(src="./js/libs.js")
    include ./_include/_footer-js
    script(src="./js/common.js")
    
