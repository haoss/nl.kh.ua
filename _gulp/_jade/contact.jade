doctype

html(lang="ru")
  
  -var active = 'Контакты' //активный пункт меню, список в header.jade
  -var pageTitle = 'Контакты' + ' - Ломбард «Національний»' //title страницы для генерации верстки  

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    
    include ./_include/_header
    
    .content.no--p-bottom
      
      .breadcrumbs
        .container
          ul
            li
              a(href="#!") 
                i.fa.fa-home
                | Главная
      
      .section.no--p-top
        .container
          .section__head
            div
              h1 Контакты
          
          .row
            .col-md-6
              p Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
              
              .contact__row
                .contact__block
                  img(src="./img/contact-img-1.png", alt="").contact__block-img
                  .contact__block-title Быстрый выкуп
                  p +38(096) 96 96 984
                    br
                    | +38(096) 96 96 984
                .contact__block
                  img(src="./img/contact-img-2.png", alt="").contact__block-img
                  .contact__block-title Режим работы
                  p Пн - Пт с 9:00 до 18:00
                    br
                    | Сб, Вс с 9:00 до 18:00
                .contact__block
                  img(src="./img/contact-img-3.png", alt="").contact__block-img
                  .contact__block-title Мы находимся
                  p ул. Харьковская 123
              
            .col-md-6
              #map_canvas.contact__map
              
              // Google Map
              script(src='https://maps.googleapis.com/maps/api/js?sensor=false')
              script.
                function initialize() {
                var myLatlng = new google.maps.LatLng(49.9462851,36.2443757);
                var map_options = {
                  zoom: 13,
                  mapTypeId: google.maps.MapTypeId.ROADMAP,
                  center: myLatlng,
                  scrollwheel: false,
                  disableDefaultUI: true
                }
                var map = new google.maps.Map(document.getElementById('map_canvas'), map_options)
                var marker = new google.maps.Marker({
                  position: myLatlng,
                  map: map
                });
                /* Remove if you dont want B/W Google Map */
                /*
                var styles = [
                {
                featureType: "all",
                stylers: [
                { saturation: -100 }
                ]
                }
                ];
                map.setOptions({styles: styles});
                */
                }
                google.maps.event.addDomListener(window, 'load', initialize);
              // Google Map Ends!
              
      .section.form-cost(style="background-image: url('./img/background-section-2.jpg');")
        .container
          
          .section__head.section__head--center
            div
              .h1 Написать директору 
            
            p Отправьте описание и фотографии ваших украшений или сертификата. Наши эксперты-оценщики проконсультируют вас в ближайшее время.

            form.form(action="#")
              .row
                .col-lg-4.col-lg-offset-2.col-md-5.col-md-offset-1.col-sm-6
                  .form-group.has-icon
                    label.hidden Ваше имя
                    input(type="text" name="first-name" placeholder="Ваше имя").form-control
                    i.fa.fa-user
                  .form-group.has-icon.has-error
                    label.hidden Ваш телефон
                    input(type="text" name="phone" placeholder="+38 (___) ___ __ __").form-control.phone-mask
                    i.fa.fa-phone
                  .form-group.has-icon
                    label.hidden Ваш email
                    input(type="text" name="email" placeholder="Email").form-control
                    i.fa.fa-envelope
                .col-lg-4.col-md-5.col-sm-6
                  .form-group.has-icon
                    textarea.form-control.form-control--thin(name="message" placeholder="Введите сообщение")
                    i.fa.fa-pencil
              
              .clear30
              .text-center
                button(type="submit").btn Отправить

    
    include ./_include/_footer
